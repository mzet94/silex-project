{# Add action template for Locations controller #}
{% extends 'base.twig' %}

{% block title %}{{ 'Add location'|trans }}{% endblock %}
{% block content %}
	{% if is_granted('IS_AUTHENTICATED_ANONYMOUSLY') %}
		{% if is_granted('ROLE_ADMIN') %}
			<h2>{{ 'Add cinema'|trans }}</h2>
				<form action="{{ url('locations_add') }}" method="post">
					{{ form_widget(form) }}
					<input class="btn btn-primary" type="submit" name="submit" value="{{ 'Save'|trans }}" />
					<div>
						<a class="btn btn-primary" href="{{ url('locations_index', {'page': 1 }) }}" title="{{ 'Back'|trans }}">{{ 'Back'|trans }}</a>
					</div>
				</form>
		{% else %}
			<div class="alert alert-danger" role="alert">
				{{ 'Sorry, you have no permission here.'|trans }}
			</div>
			<a class="btn btn-primary" href="{{ url('seances_index')}}" title="{{ 'Home page'|trans }}">{{ 'Home page'|trans }}</a>
		{% endif %}
	{% else %}
		<div class="alert alert-danger" role="alert">
			{{ 'Sorry, you have no permission here.'|trans }}
		</div>
		<a class="btn btn-default" href="{{ url('auth_login')}}" title="{{ 'Sign in'|trans }}">{{ 'Sign in'|trans }}</a>
	{% endif %}
{% endblock %}
