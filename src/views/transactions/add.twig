{# Add action template for Transactions controller #}
{% extends 'base.twig' %}

{% block title %}{{ 'Buy a ticket'|trans }}{% endblock %}
{% block content %}
	{% if is_granted('IS_AUTHENTICATED_FULLY') %}
		<h2>{{ 'Buy a ticket'|trans }}</h2>
			<form action="{{ url('transactions_add')}}" method="post">
				{{ form_widget(form) }}
				<input class="btn btn-primary" type="submit" name="submit" value="{{ 'Buy'|trans }}" />
				<div>
					<a class="btn btn-primary" href="{{ url('seances_index', {'page': 1 }) }}" title="{{ 'Back'|trans }}">{{ 'Back'|trans }}</a>
				</div>
			</form>
	{% endif %}
{% endblock %}
