{# Add Address action template for Users controller #}
{% extends 'base.twig' %}

{% block title %}{{ 'Add address'|trans }}{% endblock %}
{% block content %}
	{% if is_granted('IS_AUTHENTICATED_FULLY')  %}
		<h2>{{ 'Add address'|trans }}</h2>
			<form action="{{ url('add_address') }}" method="post">
				{{ form_widget(form) }}
				<input class="btn btn-primary" type="submit" name="submit" value="{{ 'Save'|trans }}" />
				<div>
					<a class="btn btn-primary" href="{{ url('seances_index', {'page': 1 }) }}" title="{{ 'Cancel'|trans }}">{{ 'Cancel'|trans }}</a>
				</div>
			</form>
	{% else %}
		<div class="alert alert-danger" role="alert">
			{{'Sorry, you have no permission here.'|trans}}
		</div>
		<a class="btn btn-primary" href="{{ url('seances_index', {'page': 1 }) }}" title="{{ 'Home page'|trans }}">{{ 'Home page'|trans }}</a>
   {% endif %}
{% endblock %}

