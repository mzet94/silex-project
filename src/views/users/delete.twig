{# Delete action template for Users controller #}
{% extends 'base.twig' %}

{% block title %}{{ 'Delete user'|trans }}{% endblock %}
{% block content %}
	<h2>{{ user.login }}</h2>
		<p>{{ 'Do you want to delete this user?'|trans }}</p>
		<form action="{{ url('users_delete', {'id' : user.id}) }}" method="post">
			{{ form_widget(form) }}
			<input class="btn btn-danger" type="submit" name="submit" value="{{ 'Yes'|trans }}" />
			<div>
				<a class="btn btn-primary" href="{{ url('users_view', {'id': user.id}) }}" title="{{ 'Cancel'|trans }}">{{ 'Cancel'|trans }}</a>
			 </div>
		</form>
		{% for flashMessage in app.session.getFlashBag.get('message') %}
			<div class="alert alert-{{ flashMessage.type }}" role="alert">
				{{ flashMessage.content }}
			</div>
		{% endfor %}
{% endblock %}