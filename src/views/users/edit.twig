{# Edit action template for Users controller #}
{% extends 'base.twig' %}

{% block title %}{{ 'Edit user'|trans }}{% endblock %}
{% block content %}
	<h2>{{ 'Edit profile'|trans }}</h2>
		<div>
			<form action="{{ url('users_edit' , {'id' : user.id}) }}" method="post">
				{{ form_widget(form) }}
				<input class="btn btn-success" type="submit" name="submit" value="{{ 'Save'|trans }}"/>
			</form>
			<div>
				<a class="btn btn-primary" href="{{ url('users_view', {'id': user.id}) }}" title="{{ 'Cancel'|trans }}">{{ 'Cancel'|trans }}</a>
			</div>
		</div>
		{% for flashMessage in app.session.getFlashBag.get('message') %}
			<div class="alert alert-{{ flashMessage.type }}" role="alert">
				{{ flashMessage.content }}
			</div>
		{% endfor %}
{% endblock %}


